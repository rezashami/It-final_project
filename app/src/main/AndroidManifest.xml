<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.rezatanha.finalproject">

    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.DISABLE_KEYGUARD" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission
        android:name="android.permission.MANAGE_DOCUMENTS"
        tools:ignore="ProtectedPermissions" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name=".CustomFontApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="AllowBackup,GoogleAppIndexingWarning">
        <activity
            android:name=".MainActivity"
            android:label="@string/title_activity_main"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".View.alarm.AlarmCreationActivity" />
        <activity android:name=".View.alarm.AlarmListActivity" />
        <activity android:name=".View.alarm.ShowOneAlarmActivity" />
        <activity android:name=".View.alarm.TimePickingActivity" />
        <activity android:name=".View.alarm.ShowAlarmLauncherActivity" />
        <activity android:name=".View.medicine.ShowMedicineListActivity" />
        <activity
            android:name=".View.medicine.MedicineListActivity"
            android:label="مدیریت داروها"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".View.medicine.AddMedicineActivity"
            android:label="افزودن دارو"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity android:name=".View.medicine.MedicineShowActivity"
            android:label="مشاهده دارو"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity android:name=".View.prescription.PrescriptionListActivity" />
        <activity android:name=".View.prescription.PrescriptionShowActivity" />
        <activity android:name=".View.report.ReportListActivity" />
        <activity android:name=".View.report.ReportShowActivity" />
        <activity android:name=".View.help.HelpActivity" />

        <meta-data
            android:name="android.app.searchable"
            android:resource="@xml/searchable" />
    </application>

</manifest>